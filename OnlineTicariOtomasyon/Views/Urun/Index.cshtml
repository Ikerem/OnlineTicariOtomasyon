@using OnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
<p>
    Ürün Adı: @Html.TextBox("p")
    <input type="submit"  value="Ara" />
</p>
}
<br />
<table class="table table-bordered">
    <tr>

        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>

        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>

            <td>
                @u.UrunAd
            </td>
            <td>
                @u.Marka
            </td>
            <td>
                @u.Stok
            </td>
            <td>
                @u.AlisFiyati₺
            </td>
            <td>
                @u.SatisFiyati₺
            </td>
            <td>
                @u.Kategoriid
            </td>

            <td>
                <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">SİL</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>

    }
</table>
<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün</a>

