@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>DepartmanPersonelSatis</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dpers</li>
</ol>
<table class="table table-condensed">
    <tr>
     
        <td>Ürün</td>
        <td>Cari</td>
        <td>Fiyat</td>
        <td>Adet</td>
        <td>Toplam</td>
        <td>Tarih</td>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
          
            <td>
                @x.Urun.UrunAd
            </td>
            <td>
                @x.Cariler.CarilerAd
            </td>
            <td>
                @x.Fiyat₺
            </td>
            <td>
                @x.adet
            </td>
            <td>
                @x.ToplamTutar₺
            </td>
            <td>
                @x.Tarih
            </td>

        </tr>
    }

</table>