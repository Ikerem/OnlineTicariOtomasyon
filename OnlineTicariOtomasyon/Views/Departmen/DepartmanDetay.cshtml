@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>DepartmanDetay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dpt</li>
</ol>
<table class="table table-hover">
    <tr>

        <td>Ad</td>
        <td>Soy Ad</td>
        <td>Satışlar</td>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personelad</td>
            <td>@x.PersonelSoyad</td>

            <td><a href="/Departmen/DepartmanPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color:orangered; color: white">Satışlar</a></td>

        </tr>
    }

</table>

