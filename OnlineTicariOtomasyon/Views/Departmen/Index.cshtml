@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <table class="table table-bordered" style="margin-top:20px">
        <tr>
            <th>ID</th>
            <th>DEPARTMAN ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>Detaylar</th>

        </tr> 

        @foreach (var k in Model)
        { 

            <tr>
                <td>
                    @k.DepartmanAdı
                </td>
                <td>
                    @k.DepartmanAdı
                </td>
                <td><a href="/Departmen/DepartmanSil/@k.DepartmanId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Departmen/DepartmanGetir/@k.DepartmanId" class="btn  btn-warning ">Güncelle</a></td>
                <td><a href="/Departmen/DepartmanDetay/@k.DepartmanId" class="btn  btn-default " style="background-color:midnightblue;color:white">Departman Detay</a></td>

            </tr>
        }
    </table>
    <a href="/Departmen/DepartmanEkle" class="btn btn-info">Departman Ekle</a>

