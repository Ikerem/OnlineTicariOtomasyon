@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satıs Detayı</h2>
<br />

<table class="table table-condensed">
    <tr>
        <td>Satış Id</td>
        <td>Ürün</td>
        <td>Personel</td>
        <td>Cari</td>
        <td>Fiyat</td>
        <td>Adet</td>
        <td>Toplam</td>
        <td>Tarih</td>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>
                @x.SatisHareketid
            </td>
            <td>
                @x.Urun.UrunAd
            </td>
            <td>
                @x.Cariler.CarilerAd@x.Cariler.CarilerSoyad
            </td>
            <td>
                @x.Personels.Personelad@x.Personels.PersonelSoyad

            </td>
            <td>
                @x.Fiyat
            </td>
            <td>
                @x.adet
            </td>
            <td>
                @x.ToplamTutar
            </td>
            <td>
                @x.Tarih
            </td>

        </tr>
    }

</table>
<button class="btn btn-default"  style=" background-color:dodgerblue">Yazdır</button>

