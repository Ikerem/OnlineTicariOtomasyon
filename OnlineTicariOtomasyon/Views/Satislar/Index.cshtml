@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            @*<th>Cari</th>*@
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.SatisHareketid
            </td>
            <td>
                @k.Urun.UrunAd
            </td>
            @*<td>
                @k.Cariler.CarilerId
            </td>*@

            <td>
                @k.Personels.Personelad@k.Personels.PersonelSoyad

            </td>
            <td>
                @k.adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamTutar
            </td>
            <td>
                @k.Tarih
            </td>

            <td><a href="/Satislar/SatisGetir/@k.SatisHareketid" class="btn  btn-warning ">Güncelle</a></td>
            <td><a href="/Satislar/SatisDetay/@k.SatisHareketid" class="btn  btn-default " style="background-color:midnightblue;color:white">Departman Detay</a></td>

        </tr>
    }
</table>
<br />
<a href="/Satislar/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>




